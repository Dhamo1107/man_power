<%= render 'layouts/search_form' %>

<div class="users-list">
  <% @created_tasks.each do |task| %>
    <%= link_to task_path(task), class: "user-card-link" do %>
      <div class="user-card">
        <h5 class="user-name"><%= task.title %></h5>
        <p class="user-detail" title="Status"><i class="fas fa-clipboard-list"></i> <%= task.status.humanize %></p>
        <p class="user-detail" title="Priority"><i class="fas fa-flag"></i> <%= task.priority.humanize %></p>
        <p class="user-detail" title="Due Date"><i class="fas fa-calendar-check"></i> <%= format_datetime(task.due_date) %></p>
        <p class="user-detail" title="Assigned To"><i class="fas fa-user-tag"></i> <%= task.assignee.full_name %></p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="pagination-container">
  <%== pagy_bootstrap_nav(@pagy).html_safe if @pagy.pages > 1 %>
</div>
<div class="pagination-info">
  <%== pagy_info(@pagy) %>
</div>