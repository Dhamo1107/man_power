<%= form_with(model: @task, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', required: true %>
  </div>

  <%= form.hidden_field :assigned_to_user_id, value: @assignee.id %>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.keys.map { |status| [status.humanize, status] }, {}, class: 'form-control' %>
  </div>

  <%= form.submit 'Create Task', class: 'btn btn-primary' %>
<% end %>
