<br />
<h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="sign-up-form">
      <div class="field">
        <%= f.label :full_name, class: "required-field" %><br />
        <%= f.text_field :full_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :user_name, class: "required-field" %><br />
        <%= f.text_field :user_name %>
      </div>

      <div class="field">
        <%= f.label :phone_number, class: "required-field" %><br />
        <%= f.text_field :phone_number %>
      </div>

      <div class="field">
        <%= f.label :email, class: "required-field" %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :date_of_birth, class: "required-field" %><br />
        <div class="date-select">
          <%= f.date_select :date_of_birth, start_year: 1960, end_year: Date.today.year %>
        </div>
      </div>

      <div class="field">
        <%= f.label :profession_ids, "Select Professions", class: "required-field" %><br />
        <%= f.drop_down :profession_ids, Profession.all, :id, :name, {}, { multiple: true } %>
      </div>

      <div class="field">
        <%= f.label :experience_years, class: "required-field" %><br />
        <%= f.number_field :experience_years %>
      </div>

      <div class="field">
        <%= f.label :district, class: "required-field" %><br />
        <%= f.text_field :district %>
      </div>

      <div class="field">
        <%= f.label :pin_code, class: "required-field" %><br />
        <%= f.text_field :pin_code %>
      </div>

      <div class="field">
        <%= f.label :address, class: "required-field" %><br />
        <%= f.text_area :address %>
      </div>

      <div class="field">
        <%= f.label :bio %><br />
        <%= f.text_area :bio %>
      </div>

      <div class="field">
        <%= f.label :password, class: "required-field" %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "required-field" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
