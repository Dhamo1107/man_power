<%= link_to 'Start a New Discussion', new_discussion_path, class: 'btn btn-primary new-discussion-btn' %>

<ul class="discussion-list">
  <% @discussions.each do |discussion| %>
    <li class="discussion-item">
      <h3 class="discussion-title">
        <%= link_to discussion.title, discussion_path(discussion), class: 'discussion-link' %>
      </h3>
      <p class="discussion-body"><%= truncate(discussion.body, length: 100) %></p>
      <p class="discussion-meta">
        <i class="fas fa-user"></i> Posted by: <%= discussion.user.full_name %> &nbsp; &nbsp;
        <i class="fas fa-clock"></i> <%= time_ago_in_words(discussion.created_at) %> ago
      </p>
    </li>
  <% end %>
</ul>
