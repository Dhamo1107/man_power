<div class="tasks-container">
  <div class="task-section">
    <h5>Tasks Created by You</h5>
    <% if @created_tasks.any? %>
      <div class="task-cards">
        <% @created_tasks.each do |task| %>
          <%= link_to task_path(task), class: "task-card-link" do %>
            <div class="task-card">
              <h3><%= task.title %></h3>
              <p>Status: <%= task.status.humanize %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p>No tasks found</p>
    <% end %>
  </div>

  <div class="task-section">
    <h5>Tasks Assigned to You</h5>
    <% if @assigned_tasks.any? %>
      <div class="task-cards">
        <% @assigned_tasks.each do |task| %>
          <%= link_to task_path(task), class: "task-card-link" do %>
            <div class="task-card">
              <h3><%= task.title %></h3>
              <p>Status: <%= task.status.humanize %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p>No tasks found</p>
    <% end %>
  </div>
</div>
