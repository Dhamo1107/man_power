<div class="tasks-container">
  <div class="task-section">
    <h2>Tasks Created by You</h2>
    <% if @created_tasks.any? %>
      <div class="task-cards">
        <% @created_tasks.each do |task| %>
          <div class="task-card">
            <h3><%= link_to task.title, task_path(task) %></h3>
            <p>Status: <%= task.status.humanize %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>No tasks created by you.</p>
    <% end %>
  </div>

  <div class="task-section">
    <h2>Tasks Assigned to You</h2>
    <% if @assigned_tasks.any? %>
      <div class="task-cards">
        <% @assigned_tasks.each do |task| %>
          <div class="task-card">
            <h3><%= link_to task.title, task_path(task) %></h3>
            <p>Status: <%= task.status.humanize %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>No tasks assigned to you.</p>
    <% end %>
  </div>
</div>
