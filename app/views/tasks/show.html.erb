<h1><%= @task.title %></h1>
<p><%= @task.description %></p>
<p>Status: <%= @task.status.humanize %></p>
<p>Created by: <%= link_to @task.creator.full_name, user_path(@task.creator) %></p>
<p>Assigned to: <%= link_to @task.assignee.full_name, user_path(@task.assignee) %></p>

<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-warning' %>
<%= link_to 'Back to Tasks', tasks_path, class: 'btn btn-secondary' %>
<%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
