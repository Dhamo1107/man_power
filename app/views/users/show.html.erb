<div class="user-details">
  <h4><i class="fas fa-user-circle"></i> <%= @user.full_name %></h4>
  <div class="detail-item">
    <i class="fas fa-envelope"></i> <strong>Email:</strong> <span><%= @user.email %></span>
  </div>
  <div class="detail-item">
    <i class="fas fa-briefcase"></i> <strong>Profession:</strong>
    <span>
      <% @user.professions.each do |profession| %>
        <%= profession.name %><%= "," unless profession == @user.professions.last %>
      <% end %>
    </span>
  </div>
  <div class="detail-item">
    <i class="fas fa-calendar-alt"></i> <strong>Experience Years:</strong> <span><%= @user.experience_years %></span>
  </div>
  <div class="detail-item">
    <% if @user.task_created_by_current_user?(current_user) %>
      <i class="fas fa-phone"></i> <strong>Phone Number:</strong> <span><%= @user.phone_number %></span>
    <% else %>
      <i class="fas fa-phone"></i> <strong>Phone Number:</strong> <span> Create task to see phone number </span>
    <% end %>
  </div>
  <div class="detail-item">
    <i class="fas fa-birthday-cake"></i> <strong>Date of Birth:</strong> <span><%= @user.date_of_birth %></span>
  </div>
  <div class="detail-item">
    <i class="fas fa-map-marker-alt"></i> <strong>Address:</strong> <span><%= @user.address %></span>
  </div>
  <div class="detail-item">
    <i class="fas fa-city"></i> <strong>District:</strong> <span><%= @user.district %></span>
  </div>
  <div class="detail-item">
    <i class="fas fa-map-pin"></i> <strong>Pin Code:</strong> <span><%= @user.pin_code %></span>
  </div>
  <div class="detail-item">
    <i class="fas fa-info-circle"></i> <strong>Bio:</strong> <span><%= @user.bio %></span>
  </div>
  <div class="detail-item">
    <i class="fas fa-check-circle"></i> <strong>Tasks completed:</strong> <span><%= Task.tasks_completed(@user) %></span>
  </div>

  <div class="detail-item">
    <i class="fas fa-star"></i> <strong>Average Rating:</strong>
    <span>
      <% if @average_rating.positive? %>
        <%= @average_rating %>/5
      <% else %>
        No ratings yet
      <% end %>
    </span>
  </div>

  <div class="detail-item">
    <i class="fas fa-trophy"></i> <strong>Rank:</strong> <span><%= @user_rank %>/<%= User.total_users %> </span>
  </div>

  <div class="detail-item">
    <i class="fas fa-user"></i> <strong>Leaderboard Score:</strong> <span><%= @leaderboard_score.round(2) %></span>
  </div>

  <div class="nav-actions">
    <%= link_to 'Create Task', new_task_path(user_id: @user.id), class: 'btn btn-success' %>
  </div>
</div>
