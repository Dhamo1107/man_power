<h3>Leaderboard</h3>

<table>
  <thead>
  <tr>
    <th>Rank</th>
    <th>User</th>
    <th>Tasks Completed</th>
    <th>Average Rating</th>
    <th>Leaderboard Score</th>
  </tr>
  </thead>
  <tbody>
  <% @top_users.each_with_index do |user, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= link_to user.full_name, user_path(user), class: "user-link" %></td>
      <td><%= user.completed_tasks_count %></td>
      <td><%= user.average_rating.round(2) %></td>
      <td><%= user.leaderboard_score.round(2) %></td>
    </tr>
  <% end %>
  </tbody>
</table>